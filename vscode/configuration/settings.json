{
  // ============================================
  // VS CODE "REVIEW & ORCHESTRATION" MODE
  // For use with Claude Code (no manual coding)
  // ============================================

  // --- YOUR EXISTING SETTINGS ---
  "workbench.colorTheme": "Default High Contrast",
  "chat.disableAIFeatures": true,

  // --- DISABLE ALL AUTOCOMPLETE/INTELLISENSE ---
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.parameterHints.enabled": false,
  "editor.wordBasedSuggestions": "off",
  "editor.inlineSuggest.enabled": false,
  "editor.snippetSuggestions": "none",
  "editor.tabCompletion": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggest.showStatusBar": false,

  // --- DISABLE ALL AUTO-TYPING ASSISTANCE ---
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoSurround": "never",
  "editor.autoIndent": "none",
  "editor.linkedEditing": false,
  "emmet.showExpandedAbbreviation": "never",
  "emmet.showSuggestionsAsSnippets": false,

  // --- DISABLE ALL AUTO-FORMATTING ---
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,

  // --- DISABLE TERMINAL INTELLISENSE ---
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.suggest.quickSuggestions": false,

  // --- STRIP UI BLOAT ---
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,

  // --- KEEP FOR REVIEW ---
  "editor.hover.enabled": "on",
  "editor.stickyScroll.enabled": true,
  "editor.renderLineHighlight": "all",
  "editor.lineNumbers": "on",
  "editor.folding": true,
  "editor.matchBrackets": "near",
  "editor.occurrencesHighlight": "singleFile",

  // --- OPTIMIZE DIFF VIEW ---
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "scm.diffDecorations": "all",

  // --- LOCAL HISTORY (undo Claude's mistakes) ---
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileEntries": 100,

  // --- MAKE IT FEEL READ-ONLY ---
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line-thin",
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,

  // --- TERMINAL (where Claude Code runs) ---
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  "claudeCode.preferredLocation": "panel"
}
